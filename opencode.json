{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "ref": {
      "type": "remote",
      "url": "https://api.ref.tools/mcp?apiKey=ref-ca2fc4cc4783a651760b",
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--headless"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "enabled": true
    }
  },
  "tools": {
    "ref*": false,
    "exa*": false,
    "playwright*": false,
    "chrome-devtools*": false
  },
  "agent": {
